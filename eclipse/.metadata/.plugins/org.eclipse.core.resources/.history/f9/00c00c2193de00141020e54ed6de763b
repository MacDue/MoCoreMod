package com.scoutmc.mcm.texture;

import net.minecraft.client.Minecraft;
import net.minecraft.client.resources.model.ModelResourceLocation;

import com.scoutmc.mcm.item.ItemManager;

public class TextureManager {
	
	//Registering Item Textures
	
	public static void registerItemTextures() {
		
		Minecraft.getMinecraft().getRenderItem().getItemModelMesher().register(ItemManager.Infusion_Tool, 0, new ModelResourceLocation("mcm:infusion_tool", "inventory"));
		
	}
	
	//Registering Block Textures
	
	public static void registerBlockTextures() {
		
		
		
	}

}
